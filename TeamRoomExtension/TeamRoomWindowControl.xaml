<UserControl x:Class="TeamRoomExtension.TeamRoomWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">TeamRoomWindow</TextBlock>
            <Button Name="btnClickMe" Content="Click me!" Click="btnClickMe_Click" Width="120" Height="25" Margin="90,0"/>
            <TextBox Name="txtBugs" TextWrapping="Wrap" Text="Waiting for service response...." RenderTransformOrigin="0.5,0.5" Margin="0,20"/>
        </StackPanel>
    </Grid>
</UserControl>
